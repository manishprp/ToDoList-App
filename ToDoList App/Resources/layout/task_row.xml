<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <androidx.cardview.widget.CardView
        android:background="@drawable/cardviewbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relativeLayoutt"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/taskDoneCheckBox"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/separatorLayout"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/taskDoneCheckBox"
                android:orientation="vertical"
                android:background="#000000"
                android:layout_width="3dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_toLeftOf="@+id/separatorLayoutTwo"
                android:id="@+id/taskTextView"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/separatorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/separatorLayoutTwo"
                android:layout_toLeftOf="@+id/deleteIcon"
                android:orientation="vertical"
                android:background="#000000"
                android:layout_width="3dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/deletedrawable"
                android:id="@+id/deleteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
